export EMAIL=gudleik@gmail.com

export GIT_AUTHOR_NAME="Gudleik Rasch"
export GIT_AUTHOR_EMAIL=$EMAIL
export GIT_COMMITTER_NAME=$GIT_AUTHOR_NAME
export GIT_COMMITTER_EMAIL=$GIT_AUTHOR_EMAIL

export PATH=$PATH:$HOME/bin

export ARCHFLAGS="-arch x86_64"
export EDITOR="mvim -f"
export GIT_EDITOR="vim -f"
export GEM_OPEN_EDITOR="mvim"
export JAVA_HOME="$(/usr/libexec/java_home)"

export LANG=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8

export LESS="-R -M --shift 5"                               
export LESSOPEN='| /usr/local/bin/src-hilite-lesspipe.sh %s'
export LESSCOLOR=1
export ACK_PAGER="less $LESS"

export PAGER="less $LESS"

export NODE_PATH="/usr/local/lib/node_modules:/usr/local/lib/node"

# Amazon
export EC2_KEYPAIR="default"
export EC2_CERT="$(/bin/ls "$HOME"/.ec2/cert*.pem | /usr/bin/head -1)"
export EC2_PRIVATE_KEY="$(/bin/ls "$HOME"/.ec2/pk*.pem | /usr/bin/head -1)"
export EC2_HOME="/usr/local/Library/LinkedKegs/ec2-api-tools/jars"
export EC2_URL=https://ec2.eu-west-1.amazonaws.com
export AWS_RDS_HOME="/usr/local/Library/LinkedKegs/rds-command-line-tools/jars"

export MAKEFLAGS="-j 4"

export RUBY_HEAP_MIN_SLOTS=800000
export RUBY_HEAP_FREE_MIN=100000
export RUBY_HEAP_SLOTS_INCREMENT=300000
export RUBY_HEAP_SLOTS_GROWTH_FACTOR=1
export RUBY_GC_MALLOC_LIMIT=79000000
